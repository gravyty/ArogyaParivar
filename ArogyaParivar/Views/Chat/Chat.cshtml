@{
    ViewBag.Title = "Chat";
    ViewBag.UserID = Model.userId;
    ViewBag.UserName = Model.userName;
}
<script> var userID = '@ViewBag.UserID' </script>
<script> var userName = '@ViewBag.UserName' </script>
<link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/dist/css/AdminLTE.min.css" rel="stylesheet" />

   

<div ng-app="chat-app" ng-controller="ChatController">
    <div class="box box-warning direct-chat direct-chat-warning">
        <div class="box-header with-border">
            <h3 class="box-title">Direct Chat</h3>
            <div class="box-tools pull-right">
                <span data-toggle="tooltip" title="3 New Messages" class="badge bg-yellow">3</span>
                <button class="btn btn-box-tool" data-widget="collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button class="btn btn-box-tool" data-toggle="tooltip" title="Contacts" data-widget="chat-pane-toggle">
                    <i class="fa fa-comments"></i>
                </button>
                <button class="btn btn-box-tool" data-widget="remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div style="display: none">
                <div>
                    Name:{{Model.userName}}
        <input type="text" ng-model="name" /><br />
                    Message:
        <input type="text" ng-model="message" id="txt" /><br />
                    <input type="button" value="Send" ng-click="newMessage()" />
                </div>
                <div>
                    <ul>
                        <li ng-repeat="chat in messages">
                            <span ng-bind="chat"></span>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="col-sm-12">
                <ul class="box">
                    <li ng-repeat="user in onlineUsers" my-post-repeat-directive>
                        <a data-userid="{{user}}" href="#" ng-click="UserItemClick(user)" ng-bind="user">{{user}}</a>
                    </li>
                </ul>
            </div>
            <div id="chatContainer" class="col-sm-12"></div>
            <div id="divChatWindow" style="width: 100%; display: none; margin-right: 10px" class="col-sm-12">
                <div class="box box-warning">
                    <div class="body" style="max-height: 200px">
                        <ul id="messages" class="control-label"></ul>
                    </div>
                </div>
                <hr />
                <div class="col-sm-10">
                    <input type="text" ng-model="message" class="ChatText form-control" placeholder="Type Message ..." />
                </div>
                <input type="button" value="Send" ng-click="ChatSend($event)" class="btn btn-warning " />

            </div>
        </div>
        <!-- /.box-body -->

    </div>
    <!--/.direct-chat -->
</div>
@section scripts{
    @*/* load your scripts here. You can exclude jQuery, 
      coz it's already in the template */ *@
    <script src="/Scripts/jquery.signalR-2.2.0.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="/Scripts/angular/angular.min.js"></script>
    <script src="/Scripts/Chat.js"></script>
}

